{{#if addNewCategory}}
<h1>New Category</h1>
<div>
  <form>
    <div class="form-group">
      <label for="catName">Name</label>
      {{input value=catName id="catName"}}
    </div>
    <button class="btn btn-success" {{action 'save1'}}>Save</button>
  </form>
</div>
{{else}}
<a class="btn btn-default" {{action 'categoryFormShow'}}>New Category</a>
{{/if}}
